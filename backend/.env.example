# Uffizi Ticket App - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

#==============================================================================
# APPLICATION SETTINGS
#==============================================================================
APP_NAME=UffiziDashboard
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Europe/Rome

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

#==============================================================================
# SECURITY
#==============================================================================
BCRYPT_ROUNDS=12

# Additional CORS allowed origin (for custom frontend domains)
# CORS_ALLOWED_ORIGIN=https://custom-domain.com

#==============================================================================
# LOGGING
#==============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#==============================================================================
# DATABASE
#==============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=uffizi_tickets
DB_USERNAME=root
DB_PASSWORD=

#==============================================================================
# SESSION & CACHE
#==============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

#==============================================================================
# REDIS (if using Redis for cache/sessions)
#==============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#==============================================================================
# BOKUN API
# Get credentials from: Bokun dashboard > Settings > API Keys
#==============================================================================
BOKUN_ACCESS_KEY=
BOKUN_SECRET_KEY=
BOKUN_BASE_URL=https://api.bokun.io

# Uffizi Product IDs (comma-separated)
# 961802=Timed Entry, 961801=Small Group Tour, 962885=David Tour,
# 962886=VIP Private Tour, 1130528=Vasari, 1135055=Palazzo Vecchio
UFFIZI_PRODUCT_IDS=961802,961801,962885,962886,1130528,1135055

#==============================================================================
# TWILIO (WhatsApp + SMS)
# Get credentials from: https://console.twilio.com
#==============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=+14155238886
TWILIO_SMS_FROM=
TWILIO_STATUS_CALLBACK_URL=

#==============================================================================
# AWS S3 (File Attachments)
# Create IAM user with S3 access and get credentials
#==============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#==============================================================================
# EMAIL (SMTP)
#==============================================================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"

#==============================================================================
# SENTRY ERROR TRACKING (Backend)
# Get DSN from: https://sentry.io > Project Settings > Client Keys
#==============================================================================
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

#==============================================================================
# PERFORMANCE MONITORING
#==============================================================================
# Slow query threshold in milliseconds (queries slower than this are logged)
SLOW_QUERY_THRESHOLD_MS=500

# Slow API response threshold in milliseconds (responses slower than this are logged)
SLOW_RESPONSE_THRESHOLD_MS=2000

#==============================================================================
# VOX/POPGUIDE AUDIO GUIDE API
# Get credentials from VOX/PopGuide partner portal
# Staging URL: https://popguide-staging.herokuapp.com
# Production URL: https://api.popguide.me (TBD)
#==============================================================================
VOX_API_KEY=your_api_key_here
VOX_API_SECRET=your_api_secret_here
VOX_BASE_URL=https://popguide-staging.herokuapp.com
VOX_ENVIRONMENT=staging

#==============================================================================
# GETYOURGUIDE API (Future - Not currently implemented)
#==============================================================================
# GYG_SUPPLIER_USERNAME=
# GYG_SUPPLIER_PASSWORD=
# GYG_API_USERNAME=
# GYG_API_PASSWORD=
# GYG_API_BASE_URL=https://supplier-api.getyourguide.com

#==============================================================================
# VITE (Frontend reference)
#==============================================================================
VITE_APP_NAME="${APP_NAME}"
